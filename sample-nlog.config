<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <!-- 
    This target sends logs to your LogReceiver application using the new sequence ID format.
    The layout format is: sequenceid|timestamp|level|logger|message|sequenceid
    
    Key benefits of this format:
    1. Sequence IDs allow proper reassembly of fragmented UDP messages
    2. Duplicate sequence IDs at start/end provide validation
    3. Better handling of large log messages (like exception stack traces)
    -->
    <target xsi:type="Network" 
            name="udp_target" 
            address="udp://127.0.0.1:7071"
            layout="${sequenceid}|${longdate}|${uppercase:${level}}|${logger}|${message}|${sequenceid}" />
    
    <!-- Optional: Also log to file for backup -->
    <target xsi:type="File" 
            name="file_target"
            fileName="logs/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${logger} ${message}" />
  </targets>

  <rules>
    <!-- Send all logs to both UDP (LogReceiver) and file -->
    <logger name="*" minlevel="Trace" writeTo="udp_target,file_target" />
  </rules>
</nlog>
